<div class="row">
    <div class="col">
        <h2 style="font-family: monospace;">Ouput</h2>
    </div>
</div>
<div class="row">
    <div class="col">
        <div id="Output" class="@OutputClass">
            @Content
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string? Content { get; set; }

    [Parameter]
    public string? OutputClass { get; set; }

    protected override void OnInitialized()
    {
        OutputClass = "normal";
    }

    public void SetContent(string? content)
    {
        Content = content;
        StateHasChanged();
    }

    public void SetClass(string? outputClass)
    {
        OutputClass = outputClass;
        StateHasChanged();
    }

}