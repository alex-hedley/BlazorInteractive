<div id="Output" class="@OutputClass">
    @Content
</div>

@code {
    [Parameter]
    public string? Content { get; set; }

    [Parameter]
    public string? OutputClass { get; set; }

    protected override void OnInitialized()
    {
        OutputClass = "normal";
    }

    public void SetContent(string? content)
    {
        Content = content;
        StateHasChanged();
    }

    public void SetClass(string? outputClass)
    {
        OutputClass = outputClass;
        StateHasChanged();
    }

}